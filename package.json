{
    "scripts": {
        "start": "node app.js",
        "postinstall": "npm run-script bower && npm run-script js && npm run-script less",
        "bower": "./node_modules/bower/bin/bower install",
        "js": "./node_modules/browserify/bin/cmd.js ./js/app.js -o ./web/js/app.js",
        "less": "./node_modules/less/bin/lessc ./less/app.less > ./web/css/app.css"
    },
    "dependencies": {
        "dragonnodejs": "~3.1.1",
        "dragonnodejs-webserver": "~8.0.0",
        "bower": "~1.3.12",
        "browserify": "~8.1.3",
        "less": "~2.3.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dragonnodejs/webserver-skeleton.git"
    }
}
